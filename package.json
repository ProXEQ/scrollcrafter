{
  "name": "scrollcrafter",
  "version": "1.2.0",
  "description": "ScrollCrafter for Elementor - GSAP scroll animations",
  "author": "PixelMobs <connect@pixelmobs.com>",
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:production": "NODE_ENV=production node esbuild.config.mjs",
    "build:watch": "node esbuild.config.mjs --watch",
