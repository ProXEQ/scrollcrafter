# --- Export ignore ---
# Te pliki NIE trafią do pliku .zip generowanego przez `git archive`
# (czyli do paczki dla klienta/WordPress.org)

.gitattributes export-ignore
.gitignore export-ignore
.env export-ignore
.env.example export-ignore
.editorconfig export-ignore
.eslintrc.js export-ignore
.stylelintrc export-ignore
esbuild.config.mjs export-ignore
package.json export-ignore
package-lock.json export-ignore
composer.json export-ignore
composer.lock export-ignore
README.md export-ignore
node_modules export-ignore

# Essential directories for the plugin MUST NOT be ignored
# src contains the core PHP logic
# src export-ignore <- Removed

# Build sources can be ignored if we ship built assets
assets/src export-ignore

# Logs and system files
audit.log export-ignore
.DS_Store export-ignore

# Tests
tests export-ignore
phpunit.xml export-ignore
jest.config.js export-ignore
